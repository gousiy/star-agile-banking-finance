def containerName = "bank"
def tag = "latest"
def dockerHubUser = "alishataj"
def httpPort = "8084"

node {
    stage('Checkout') {
        checkout scm
    }

    stage('Build') {
        sh "mvn clean install"
    }

    stage("Image Prune") {
        sh "docker image prune -a -f"
    }

    stage('Image Build') {
        sh "docker build -t ${dockerHubUser}/${containerName}:${tag} --no-cache ."
        echo "Image build complete"
    }

    stage('Push to Docker Registry') {
        withCredentials([usernamePassword(credentialsId: 'dockerhub', usernameVariable: 'dockerUser', passwordVariable: 'dockerPassword')]) {
            sh "docker login -u $alishataj -p $alisha9298"
            sh "docker tag $containerName:$tag $alishataj/$containerName:$tag"
            sh "docker push $alishataj/$containerName:$tag"
            echo "Image push complete"
        }
    }
}
